import React, { useState, useEffect } from ‚Äòreact‚Äô;
import { Plus, Edit2, Trash2, Copy, Check, Wrench } from ‚Äòlucide-react‚Äô;

const STATUS_OPTIONS = [
{ value: ‚Äòdiagnostico‚Äô, label: ‚ÄòEm Diagn√≥stico‚Äô, color: ‚Äòbg-blue-500 text-white‚Äô },
{ value: ‚Äòservico‚Äô, label: ‚ÄòEm Servi√ßo‚Äô, color: ‚Äòbg-orange-500 text-white‚Äô },
{ value: ‚Äòpeca‚Äô, label: ‚ÄòAguardando Pe√ßa‚Äô, color: ‚Äòbg-amber-500 text-white‚Äô },
{ value: ‚Äòespera‚Äô, label: ‚ÄòEm Espera‚Äô, color: ‚Äòbg-gray-500 text-white‚Äô },
{ value: ‚Äòpronto‚Äô, label: ‚ÄòPronto‚Äô, color: ‚Äòbg-green-500 text-white‚Äô }
];

export default function OficinaControl() {
const [vehicles, setVehicles] = useState([]);
const [showForm, setShowForm] = useState(false);
const [editingId, setEditingId] = useState(null);
const [copied, setCopied] = useState(false);
const [formData, setFormData] = useState({
modelo: ‚Äò‚Äô,
defeito: ‚Äò‚Äô,
status: ‚Äòdiagnostico‚Äô
});

useEffect(() => {
const stored = localStorage.getItem(‚Äòoficina_vehicles‚Äô);
if (stored) {
setVehicles(JSON.parse(stored));
}
}, []);

useEffect(() => {
localStorage.setItem(‚Äòoficina_vehicles‚Äô, JSON.stringify(vehicles));
}, [vehicles]);

const handleSubmit = (e) => {
e.preventDefault();
if (editingId) {
setVehicles(vehicles.map(v => v.id === editingId ? { ‚Ä¶formData, id: editingId } : v));
setEditingId(null);
} else {
setVehicles([‚Ä¶vehicles, { ‚Ä¶formData, id: Date.now() }]);
}
resetForm();
};

const resetForm = () => {
setFormData({
modelo: ‚Äò‚Äô,
defeito: ‚Äò‚Äô,
status: ‚Äòdiagnostico‚Äô
});
setShowForm(false);
setEditingId(null);
};

const handleEdit = (vehicle) => {
setFormData(vehicle);
setEditingId(vehicle.id);
setShowForm(true);
};

const handleDelete = (id) => {
if (confirm(‚ÄòDeseja realmente excluir este ve√≠culo?‚Äô)) {
setVehicles(vehicles.filter(v => v.id !== id));
}
};

const getStatusLabel = (status) => {
return STATUS_OPTIONS.find(s => s.value === status)?.label || status;
};

const getStatusColor = (status) => {
return STATUS_OPTIONS.find(s => s.value === status)?.color || ‚Äòbg-gray-500 text-white‚Äô;
};

const copyToWhatsApp = () => {
if (vehicles.length === 0) {
alert(‚ÄòNenhum ve√≠culo para copiar!‚Äô);
return;
}

```
const statusGroups = {};

vehicles.forEach(v => {
  const statusLabel = getStatusLabel(v.status);
  if (!statusGroups[statusLabel]) {
    statusGroups[statusLabel] = [];
  }
  statusGroups[statusLabel].push(v);
});

let text = 'üöó *VE√çCULOS NA OFICINA*\n';
text += `üìÖ ${new Date().toLocaleDateString('pt-BR')}\n`;
text += `Total: ${vehicles.length} ve√≠culo(s)\n`;
text += '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ\n\n';

Object.entries(statusGroups).forEach(([status, veiculos]) => {
  const emoji = {
    'Em Diagn√≥stico': 'üîç',
    'Em Servi√ßo': 'üîß',
    'Aguardando Pe√ßa': 'üì¶',
    'Em Espera': '‚è≥',
    'Pronto': '‚úÖ'
  }[status] || '‚Ä¢';

  text += `${emoji} *${status.toUpperCase()}* (${veiculos.length})\n`;
  veiculos.forEach((v, i) => {
    text += `${i + 1}. ${v.modelo}\n`;
    text += `   ${v.defeito}\n\n`;
  });
  text += '\n';
});

navigator.clipboard.writeText(text).then(() => {
  setCopied(true);
  setTimeout(() => setCopied(false), 2000);
});
